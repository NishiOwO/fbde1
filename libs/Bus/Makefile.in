# $Id$

CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

NAME = bus
OBJS = manager.o util.o

.PHONY: all clean
.SUFFIXES: .c .o

all: libfb$(NAME).so

libfb$(NAME).so: $(OBJS)
	$(CC) $(LDFLAGS) -shared -o $@ $(OBJS) $(LIBS)

.c.o:
	$(CC) $(CFLAGS) -c -fPIC -o $@ $<

clean:
	rm -f *.so *.o

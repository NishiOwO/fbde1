# $Id$

CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

BUILD = String Bus UI

.PHONY: all clean distclean $(BUILD)

all: String Bus UI

String::
	$(MAKE) -C $@

Bus::
	$(MAKE) -C $@

UI::
	$(MAKE) -C $@

distclean: clean
	rm -f Makefile */Makefile config.h

clean:
	for i in $(BUILD); do \
		$(MAKE) -C $$i clean ; \
	done
	rm -rf Library

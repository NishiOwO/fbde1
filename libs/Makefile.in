# $Id$

CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

BUILD = String Bus UI

.PHONY: all clean install distclean $(BUILD)

all: $(BUILD)

$(BUILD)::
	$(MAKE) -C $@

distclean: clean
	rm -f Makefile */Makefile config.h

install: all
	mkdir -p @PREFIX@/lib
	cp -rf Library/* @PREFIX@/lib/
	mkdir -p @PREFIX@/include
	cp -rf Include/* @PREFIX@/include/

clean:
	for i in $(BUILD); do \
		$(MAKE) -C $$i clean ; \
	done
	rm -rf Library

# $Id$

CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

BUILD = BusServer

.PHONY: all clean distclean $(BUILD)

all: $(BUILD)

$(BUILD)::
	$(MAKE) -C $@

distclean: clean
	rm -f Makefile */Makefile config.h

clean:
	for i in $(BUILD); do \
		$(MAKE) -C $$i clean ; \
	done
	rm -rf ./Binary

# $Id$

CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

BUILD = BusServer

.PHONY: all clean install distclean $(BUILD)

all: $(BUILD)

$(BUILD)::
	$(MAKE) -C $@

distclean: clean
	rm -f Makefile */Makefile config.h

install: all
	mkdir -p $(DESTDIR)/@PREFIX@/bin
	cp -rf Binary/* $(DESTDIR)/@PREFIX@/bin/

clean:
	for i in $(BUILD); do \
		$(MAKE) -C $$i clean ; \
	done
	rm -rf ./Binary
